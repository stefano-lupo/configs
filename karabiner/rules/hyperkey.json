{
    "title": "Hyperkeys",
    "rules": [
      {
        "manipulators": [
            {
                "description": "Change caps_lock to command+control+option (no shift).",
                "from": {
                    "key_code": "caps_lock",
                    "modifiers": {
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "left_command",
                        "modifiers": [
                            "left_control",
                            "left_option"
                        ]
                    }
                ],
                "type": "basic"
            }
        ]
      }
    ]
  }